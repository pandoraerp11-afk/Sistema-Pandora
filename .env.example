# Configurações do Django
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Banco de Dados
DATABASE_URL=sqlite:///db.sqlite3
# Para PostgreSQL: postgresql://user:password@localhost:5432/pandora_erp
# Para MySQL: mysql://user:password@localhost:3306/pandora_erp

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Notificações SMS
NOTIFICATIONS_SMS_GATEWAY_API_KEY=your-sms-api-key-here

# Configurações de Produção
DJANGO_SETTINGS_MODULE=pandora_erp.settings
